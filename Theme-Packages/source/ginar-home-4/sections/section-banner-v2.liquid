<div data-section-id="{{ section.id }}" data-section-type="section-banner-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v2 mt-all" style="background: {{ section.settings.bg_section }}">
    <div class="container container-v3"> 
      <div class="row banner display-flex align-items-center" >
        <div class="col-md-4">
            {% if section.settings.title_banner != blank %}
            <h3 class="title-banner " style="color: {{section.settings.color_title}}" >{{section.settings.title_banner}}</h3>
            {% endif %}
        </div>
        <div class="col-md-4">
          <div class="box-image">
            {% if section.settings.img_banner != blank %}
            <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
            {% else %}
            <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/806x524" class="lazyload img-fluid w-100" alt="_img_banner_">
            {% endif %}
          </div>
        </div>
        <div class="col-md-4">
          <div class="content-banner">
              {% if section.settings.title_sub != blank %}
              <p class="title-sub " style="color: {{section.settings.color_sub}}" >{{section.settings.title_sub}}</p>
              {% endif %}
          
              {% if section.settings.button_banner != blank %}
              <a href="{{section.settings.url_banner}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
              {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.section-banner-v2 .content-banner .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
    background: {{section.settings.bg_btn}};
  }
  .section-banner-v2 .content-banner .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
  }
</styl
</style>
  
