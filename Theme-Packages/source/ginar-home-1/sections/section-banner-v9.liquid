<div data-section-id="{{ section.id }}" data-section-type="section-banner-v9" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v9 mt-all"> 
    <div class="container container-v3">
      <div class="row"> 
        <div class="col-lg-6 col-md-12 ">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block"> 
                {% if section.settings.banner_img1 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img1 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/780x375" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div> 
              <div class="content">
                <div class="text">
                  <a href="{{section.settings.url_button_banner1}}">
                    {% if section.settings.title_banner1 != blank %}
                    <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner1}}</h3>
                    {% endif %}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>     
        <div class="col-lg-6 col-md-12 ">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img2 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img2 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/780x375" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="content">
                <div class="text">
                  <a href="{{section.settings.url_button_banner2}}">
                    {% if section.settings.title_banner2 != blank %}
                    <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner2}}</h3>
                    {% endif %}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% comment %} <div class="col-lg-4 col-md-4 ">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img3 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img3 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/560x746" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="content">
                <div class="text">
                  <a href="{{section.settings.url_button_banner3}}">
                    {% if section.settings.title_banner3 != blank %}
                    <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner3}}</h3>
                    {% endif %}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div> {% endcomment %}
      </div>
    </div>
  </div>
</div>
<style>
  .section-banner-v9 .banner-item .content .button-{{ section.id }} {
    color: {{section.settings.color_btn}};
  }
  .section-banner-v9 .banner-item .content .button-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
  }
</style>
